#!/usr/bin/env php
<?php

require __DIR__ . DIRECTORY_SEPARATOR . 'Import.php';

use Saeghe\Saeghe\FileManager\Address;

require_once Address::from_string(__DIR__ . '/Packages/saeghe/test-runner/Source/Assertions/File.php')->to_string();

require_once Address::from_string(__DIR__ . '/Packages/saeghe/test-runner/run')->to_string();

function root(): string
{
    return getcwd() . DIRECTORY_SEPARATOR;
}

function assert_true(bool $actual, $description = null)
{
    assert(true === $actual, $description);
}

function assert_false(bool $actual, $description = null)
{
    assert_true(! $actual, $description);
}
